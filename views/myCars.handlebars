
  <div class="container">
    <div class ="row">

      {{#each dbCarData}}

       <div class="col-12 col-sm-8 col-md-6 col-lg-4 mb-5">
        <div class="card">
          <img class="card-img" src="/images/{{dataValues.make}}.PNG" alt="Make Logo">
          <div class="card-body">
            <h4 class="card-title">{{dataValues.year}} {{dataValues.make}} {{dataValues.model}}</h4>
            <h6 class="card-subtitle mb-2 text-muted">{{dataValues.tags}}</h6>
            <p class="card-text">
              {{dataValues.description}}</p>
            <div class="options d-flex flex-fill">
               <div class="form-control mr-1">{{dataValues.color}}</div>
               <div class="form-control mr-1">{{dataValues.miles}} miles</div>
              
            </div>
            <div class="buy d-flex justify-content-between align-items-center">
              <div class="price text-success"><h5 class="mt-4">${{dataValues.price}}</h5></div>
               
               <a href = "/mycars/{{dataValues.id}}" class="btn btn-danger mt-3">Update Listing</a> 
            </div>
          </div>
        </div>
      </div>

      {{/each}}
      


    </div>
  </div>